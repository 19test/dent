<%= form_for(@practice) do |f| %>
  <% if @practice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@practice.errors.count, "error") %> prohibited this practice from being saved:</h2>

      <ul>
      <% @practice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.number_field :phone_number %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

  <h2>Associated Professionals</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Bio</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @professionals.each do |professional| %>
      <tr>
        <td><%= professional.name %></td>
        <td><%= professional.email %></td>
        <td><%= professional.phone_number %></td>
        <td><%= professional.bio %></td>
        <td><%= link_to 'Show', professional %></td>
        <td><%= link_to 'Edit', edit_professional_path(professional) %></td>
        <td><%= link_to 'Destroy', professional, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>


  <hr />
  
  <h3>Add a Professional:</h3>
    <%= form_for(@professional) do |f| %>
    <% if @professional.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@professional.errors.count, "error") %> prohibited this professional from being saved:</h2> 

        <ul>
        <% @professional.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %> 
    <%= f.hidden_field 'practice_ids][', :value => @practice.id %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, :required => true %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email, :required => true %>
    </div>
    <div class="field">
      <%= f.label :phone_number %><br>
      <%= f.telephone_field :phone_number %>
    </div>
    <div class="field">
      <%= f.label :bio %><br>
      <%= f.text_area :bio %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>


