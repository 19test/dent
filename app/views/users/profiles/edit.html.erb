
<div class="article">
  <div class="navLink"><%= link_to "Back", :back %></div>
  <h2>Edit</h2>
  <%= form_for(@user, url: registration_path(@user), html: { method: :put }) do |f| %>  
    <div class="field">
      <%= f.label :user_name %><br />
      <%= f.text_field :user_name, autofocus: true %>
    </div>   

    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div> 

    <div class="field">

      <%= f.label :profile_pic %><br />
      <img src="<%= @user.profile_pic %>">
      <%= f.text_field :profile_pic %>
      <p><i>(paste the image url)</i></p>
    </div>  

    <div class="field">
      <%= f.label :bio %><br />
      <%= f.text_area :bio %>
    </div>  

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>     
   
    <hr />

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>    

    <div class="actions">
      <%= f.submit "Update" %>
    </div>


  <% end %>

  <hr>
  <p>
    <%= button_to "Cancel my account", registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete %>
  </p>

  
</div>



